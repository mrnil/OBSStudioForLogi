<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <RootNamespace>Loupedeck.OBSStudioForLogiPlugin</RootNamespace>

    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>

    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>

    <PluginApiDir Condition="$(OS) == 'Windows_NT'">C:\Program Files\Logi\LogiPluginService\</PluginApiDir>
    <PluginApiDir Condition="$(OS) != 'Windows_NT'">/Applications/Utilities/LogiPluginService.app/Contents/MonoBundle/</PluginApiDir>

    <PluginDir Condition="$(OS) == 'Windows_NT'">$(LocalAppData)\Logi\LogiPluginService\Plugins\</PluginDir>
    <PluginDir Condition="$(OS) != 'Windows_NT'">~/Library/Application\ Support/Logi/LogiPluginService/Plugins/</PluginDir>

    <BaseOutputPath>$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)..\bin\'))</BaseOutputPath>
    <OutputPath>$(BaseOutputPath)$(Configuration)\bin\</OutputPath>

    <PluginShortName>OBSStudioForLogi</PluginShortName>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="PluginApi">
      <HintPath>$(PluginApiDir)PluginApi.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="obs-websocket-dotnet" Version="5.0.1" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="package\metadata\Icon256x256.png">
      <LogicalName>Loupedeck.OBSStudioForLogiPlugin.metadata.Icon256x256.png</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Icons\RecordingOn.svg">
      <LogicalName>Loupedeck.OBSStudioForLogiPlugin.Icons.RecordingOn.svg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Icons\RecordingOff.svg">
      <LogicalName>Loupedeck.OBSStudioForLogiPlugin.Icons.RecordingOff.svg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Icons\RecordingPause.svg">
      <LogicalName>Loupedeck.OBSStudioForLogiPlugin.Icons.RecordingPause.svg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Icons\RecordingResume.svg">
      <LogicalName>Loupedeck.OBSStudioForLogiPlugin.Icons.RecordingResume.svg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Icons\RecordingStart.svg">
      <LogicalName>Loupedeck.OBSStudioForLogiPlugin.Icons.RecordingStart.svg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Icons\RecordingStartDisabled.svg">
      <LogicalName>Loupedeck.OBSStudioForLogiPlugin.Icons.RecordingStartDisabled.svg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Icons\RecordingStop.svg">
      <LogicalName>Loupedeck.OBSStudioForLogiPlugin.Icons.RecordingStop.svg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Icons\RecordingStopDisabled.svg">
      <LogicalName>Loupedeck.OBSStudioForLogiPlugin.Icons.RecordingStopDisabled.svg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Icons\ScenesSelected.svg">
      <LogicalName>Loupedeck.OBSStudioForLogiPlugin.Icons.ScenesSelected.svg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Icons\ScenesUnselected.svg">
      <LogicalName>Loupedeck.OBSStudioForLogiPlugin.Icons.ScenesUnselected.svg</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <Target Name="CopyPackage" AfterTargets="PostBuildEvent">
    <Message Text="ðŸ“¦ Copying package files..." Importance="High" />
    <ItemGroup>
      <PackageFiles Include="package\**\*" />
    </ItemGroup>
    <Copy SourceFiles="@(PackageFiles)" DestinationFolder="$(OutputPath)..\%(RecursiveDir)" />
    <Message Text="âœ… Package files copied to $(OutputPath).." Importance="High" />
  </Target>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Condition="$(OS) == 'Windows_NT'" Command="echo $(BaseOutputPath)$(Configuration)\ &gt; &quot;$(PluginDir)$(ProjectName).link&quot;" />
    <Exec Condition="$(OS) != 'Windows_NT'" Command="echo $(BaseOutputPath)$(Configuration)\ &gt; $(PluginDir)$(ProjectName).link" />
    <Message Text="ðŸ”¨ Created plugin link at: $(PluginDir)$(ProjectName).link" Importance="High" />

    <Message Text="ðŸ”„ Sending plugin reload command for $(PluginShortName) to Logi Plugin Service" Importance="High" />
    <Exec Condition="$(OS) == 'Windows_NT'" Command="start loupedeck:plugin/$(PluginShortName)/reload" ContinueOnError="true" />
    <Exec Condition="$(OS) != 'Windows_NT'" Command="open loupedeck:plugin/$(PluginShortName)/reload" ContinueOnError="true" />
    <Message Condition="'$(MSBuildLastTaskResult)' == 'false'" Text="âŒ Couldn't reload the plugin, please restart the Logi Plugin Service manually" Importance="High" />
  </Target>

  <Target Name="PluginClean" AfterTargets="CoreClean">
    <Message Text="ðŸ§¹ Cleaning up plugin link file and output directories..." Importance="High" />

    <Delete Condition="$(OS) == 'Windows_NT'" Files="$(PluginDir)$(ProjectName).link" />
    <Exec Condition="$(OS) != 'Windows_NT'" Command="rm -f $(PluginDir)$(ProjectName).link" />

    <RemoveDir Directories="$(OutputPath).." />

    <Message Text="ðŸ§¼ Plugin link file and output directories have been cleaned!" Importance="High" />
  </Target>

</Project>
